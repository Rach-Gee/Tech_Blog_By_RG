<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
<div class="row mb-2">
  <div class="col-md-8">
    <h2>
      <a href="/blog/{{blog.id}}">{{blog.name}}</a>
    </h2>
    <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog.description}}
    </p>
  </div>
</div>
{{/each}}

{{#if logged_in}}
   <a href="/createnew">+ New Post</a>
</div>
{{/if}}